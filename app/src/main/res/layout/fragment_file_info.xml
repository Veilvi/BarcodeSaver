<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<TextView
    android:id="@+id/textView3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Файл пока не создан"
    android:layout_gravity="center"
    android:textAlignment="center"
    android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Файл ,будет находится в директории:"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/file_path"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@color/reticle_ripple"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Файл будет создан при сканировании и сохранении штрих или QR кода"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>

</LinearLayout>