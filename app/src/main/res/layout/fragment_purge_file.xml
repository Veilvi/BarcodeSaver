<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Здесь можно очистить файл с кодами"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Файл находится в директории:"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:textAlignment="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/file_path"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@color/reticle_ripple"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Убедитесь, что файл использует только это приложение и не был создан другим!"
        android:textColor="#FF0000"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="17sp"
        android:layout_marginTop="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Чтобы очистить файл напишите 'Очистить'"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/ClearEdit"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/frame_style"
        android:layout_marginTop="10dp"
        android:textColor="@color/reticle_ripple"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Подтвердить!"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"/>




</LinearLayout>